{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2016",
        "module": "commonjs",
        "sourceMap": false,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}